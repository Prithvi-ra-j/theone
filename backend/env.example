# Dristhi Backend Environment Configuration
# Copy this file to .env and update the values

# Application Settings
PROJECT_NAME=Dristhi
VERSION=0.1.0
DESCRIPTION=AI-Powered Career & Life Improvement Platform
DEBUG=true
API_V1_STR=/api/v1

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# Docker-compose variables
POSTGRES_DB=dristhi
POSTGRES_USER=postgres
POSTGRES_PASSWORD=Pass123

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:8000"]

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/dristhi
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10

# AI Services
# LLM_PROVIDER can be "ollama" or "api"
LLM_PROVIDER=api

# Ollama Settings
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# API LLM Settings
API_LLM_API_KEY=your-api-key
API_LLM_BASE_URL=https://api.example.com/v1
API_LLM_MODEL=gpt-3.5-turbo

FAISS_INDEX_PATH=./data/faiss_index
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Email (for future use)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Monitoring & Tracing
JAEGER_HOST=localhost
JAEGER_PORT=6831
OTLP_ENDPOINT=http://localhost:4317
PROMETHEUS_MULTIPROC_DIR=./prometheus_multiproc

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=./logs/dristhi.log

# External APIs (for future use)
OPENAI_API_KEY=your-openai-api-key
GOOGLE_ANALYTICS_ID=your-ga-id

# Feature Flags
ENABLE_AI_INSIGHTS=true
ENABLE_NOTIFICATIONS=true
ENABLE_GAMIFICATION=true
ENABLE_FINANCIAL_ADVICE=true

# Development
RELOAD=true
WORKERS=1
HOST=0.0.0.0
PORT=8000